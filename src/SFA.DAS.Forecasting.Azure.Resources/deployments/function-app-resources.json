{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "funAppName": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string"
    },
    "hostingEnvironment": {
      "type": "string"
    },
    "serverFarmResourceGroup": {
      "type": "string"
    },
    "EnvironmentName": {
      "type": "string"
    },
    "SecondsToWaitToAllowProjections": {
      "type": "string"
    },
    "KeyVaultName": {
      "type": "string"
    },
    "NumberOfMonthsToProject": {
      "type": "string"
    },
    "LoggingRedisConnectionString": {
      "type": "string"
    },
    "LoggingRedisKey": {
      "type": "string"
    },
    "storageConnectionString": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[parameters('funAppName')]",
      "type": "Microsoft.Web/sites",
      "dependsOn": [
        "[resourceId('microsoft.insights/components/', parameters('funAppName'))]"
      ],
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsDashboard",
              "value": "[parameters('storageConnectionString')]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[parameters('storageConnectionString')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~1"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "6.5.0"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components/', parameters('funAppName')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "EnvironmentName",
              "value": "[parameters('EnvironmentName')]"
            },
            {
              "name": "SecondsToWaitToAllowProjections",
              "value": "[parameters('SecondsToWaitToAllowProjections')]"
            },
            {
              "name": "KeyVaultName",
              "value": "[parameters('KeyVaultName')]"
            },
            {
              "name": "NumberOfMonthsToProject",
              "value": "[parameters('NumberOfMonthsToProject')]"
            },
            {
              "name": "LoggingRedisConnectionString",
              "value": "[parameters('LoggingRedisConnectionString')]"
            },
            {
              "name": "LoggingRedisKey",
              "value": "[parameters('LoggingRedisKey')]"
            },
            {
              "name": "StorageConnectionString",
              "value": "[parameters('storageConnectionString')]"
            },
            {
              "name": "AppName",
              "value": "[parameters('funAppName')]"
            }
          ],
          "alwaysOn": true
        },
        "name": "[parameters('funAppName')]",
        "clientAffinityEnabled": false,
        "serverFarmId": "[resourceId(parameters('serverFarmResourceGroup'), 'Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "hostingEnvironment": "[parameters('hostingEnvironment')]"
      },
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      },
      "kind": "functionapp"
    },
    {
      "apiVersion": "2015-05-01",
      "name": "[parameters('funAppName')]",
      "type": "microsoft.insights/components",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceId('Microsoft.Web/sites', parameters('funAppName')))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('funAppName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    }
  ],
  "outputs": {
    "funAppIdentity": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Web/sites/', parameters('funAppName')), '2016-03-01', 'Full').identity.principalId]"
    }
  }
}