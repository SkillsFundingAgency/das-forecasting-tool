{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "certificateName": {
      "type": "string",
      "metadata": {
        "description": "The connection string for the configuration storage account"
      }
    },
    "certificatePfxBase64": {
      "type": "securestring",
      "metadata": {
        "description": "The PKCS 12 Base64 value of the cert."
      }
    },
    "vstsObjectId": {
      "type": "string"
    },
    "MAWObjectId": {
      "type": "string"
    }
  },
  "variables": {
    "Microsoft.Azure.WebSites": [
      {
        "objectId": "[parameters('MAWObjectId')]",
        "tenantId": "[subscription().tenantId]",
        "permissions": {
          "secrets": [ "Get" ]
        }
      }
    ],
    "VSTSServicePrincipal": [
      {
        "objectId": "[parameters('vstsObjectId')]",
        "tenantId": "[subscription().tenantId]",
        "permissions": {
          "certificates": [ "Import" ]
        }
      }
    ]
  },
  "resources": [
    {
      "apiVersion": "2015-06-01",
      "name": "[parameters('name')]",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults",
      "properties": {
        "enabledForDeployment": false,
        "enabledForTemplateDeployment": true,
        "enabledForDiskEncryption": false,
        "accessPolicies": "[concat(variables('Microsoft.Azure.WebSites'),variables('VSTSServicePrincipal'))]",
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "name": "standard",
          "family": "A"
        }
      },
      "resources": [
        {
          "type": "secrets",
          "name": "[parameters('certificateName')]",
          "apiVersion": "2015-06-01",
          "properties": {
            "contentType": "application/x-pkcs12",
            "value": "[parameters('certificatePfxBase64')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        }
      ]
    }
  ],
  "outputs": {}
}