{
  "parameters": {
    "name": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string"
    },
    "hostingEnvironment": {
      "type": "string"
    },
    "serverFarmResourceGroup": {
      "type": "string"
    },
    "EnvironmentName": {
      "type": "string"
    },
    "RedisConnection": {
      "type": "string"
    },
    "LoggingRedisConnectionString": {
      "type": "string"
    },
    "LoggingRedisKey": {
      "type": "string"
    },
    "AllowedHashstringCharacters": {
      "type": "string"
    },
    "HashString": {
      "type": "string"
    },
    "DatabaseConnectionString": {
      "type": "string"
    },
    "LimitForecast": {
      "type": "bool",
      "defaultValue": true
    },
    "KeyVaultName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "dependsOn": [
        "[resourceId('microsoft.insights/components/', parameters('name'))]"
      ],
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components/', parameters('name')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "EnvironmentName",
              "value": "[parameters('EnvironmentName')]"
            },
            {
              "name": "RedisConnection",
              "value": "[parameters('RedisConnection')]"
            },
            {
              "name": "LoggingRedisConnectionString",
              "value": "[parameters('LoggingRedisConnectionString')]"
            },
            {
              "name": "LoggingRedisKey",
              "value": "[parameters('LoggingRedisKey')]"
            },
            {
              "name": "AllowedHashstringCharacters",
              "value": "[parameters('AllowedHashstringCharacters')]"
            },
            {
              "name": "HashString",
              "value": "[parameters('HashString')]"
            },
            {
              "name": "DatabaseConnectionString",
              "value": "[parameters('DatabaseConnectionString')]"
            },
            {
              "name": "ForecastingRoutePrefix",
              "value": "forecasting"
            },
            {
              "name": "LimitForecast",
              "value": "[parameters('LimitForecast')]"
            },
            {
              "name": "KeyVaultName",
              "value": "[parameters('KeyVaultName')]"
            }
          ],
          "alwaysOn": true
        },
        "name": "[parameters('name')]",
        "serverFarmId": "[resourceId(parameters('serverFarmResourceGroup'), 'Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "hostingEnvironment": "[parameters('hostingEnvironment')]"
      },
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      }
    },
    {
      "apiVersion": "2015-05-01",
      "name": "[parameters('name')]",
      "type": "microsoft.insights/components",
      "location": "[resourceGroup().location]",
      "properties": {
        "ApplicationId": "[parameters('name')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    }
  ],
  "outputs": {
    "webAppIdentity": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Web/sites/', parameters('name')), '2016-03-01', 'Full').identity.principalId]"
    }
  },
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0"
}