{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "hostingEnvironment": {
      "type": "string"
    },
    "EnvironmentName": {
      "type": "string"
    },
    "LimitForecast": {
      "type": "bool",
      "defaultValue": true
    },
    "KeyVaultName": {
      "type": "string"
    },
    "certKeyVaultName": {
      "type": "string"
    },
    "certKeyVaultResourceGroup": {
      "type": "string"
    },
    "LoggingRedisConnectionString": {
      "type": "string"
    },
    "LoggingRedisKey": {
      "type": "string"
    },
    "certificateName": {
      "type": "string"
    },
    "baseAddress": {
      "type": "string"
    },
    "keyvaultCertificateName": {
      "type": "string"
    },
    "customHostname": {
      "type": "string"
    },
    "myaBaseUrl": {
      "type": "string"
    },
    "appServicePlanId": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "[parameters('certificateName')]",
      "type": "Microsoft.Resources/deployments",
      "condition": "[not(equals(parameters('certificateName'), parameters('keyvaultCertificateName')))]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/app-service-certificate.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultCertificateName": {
            "value": "[parameters('certificateName')]"
          },
          "keyVaultName": {
            "value": "[parameters('certKeyVaultName')]"
          },
          "keyVaultResourceGroup": {
            "value": "[parameters('certKeyVaultResourceGroup')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[parameters('keyvaultCertificateName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/app-service-certificate.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultCertificateName": {
            "value": "[parameters('keyvaultCertificateName')]"
          },
          "keyVaultName": {
            "value": "[parameters('certKeyVaultName')]"
          },
          "keyVaultResourceGroup": {
            "value": "[parameters('certKeyVaultResourceGroup')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/hostnameBindings",
      "name": "[concat(parameters('name'), '/', parameters('customHostname'))]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "sslState": "SniEnabled",
        "thumbprint": "[reference(resourceId('Microsoft.Web/certificates', parameters('keyvaultCertificateName')), '2016-03-01').Thumbprint]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('name'))]",
        "[parameters('keyvaultCertificateName')]"
      ]
    },
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "dependsOn": [
        "[resourceId('microsoft.insights/components/', parameters('name'))]",
        "[parameters('certificateName')]"
      ],
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components/', parameters('name')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "EnvironmentName",
              "value": "[parameters('EnvironmentName')]"
            },
            {
              "name": "ForecastingRoutePrefix",
              "value": "forecasting"
            },
            {
              "name": "LimitForecast",
              "value": "[parameters('LimitForecast')]"
            },
            {
              "name": "KeyVaultName",
              "value": "[parameters('KeyVaultName')]"
            },
            {
              "name": "LoggingRedisConnectionString",
              "value": "[parameters('LoggingRedisConnectionString')]"
            },
            {
              "name": "LoggingRedisKey",
              "value": "[parameters('LoggingRedisKey')]"
            },
            {
              "name": "WEBSITE_LOAD_CERTIFICATES",
              "value": "[reference(resourceId('Microsoft.Web/certificates', parameters('certificateName')), '2016-03-01').Thumbprint]"
            },
            {
              "name": "BaseAddress",
              "value": "[parameters('baseAddress')]"
            },
            {
              "name": "MyaBaseUrl",
              "value": "[parameters('myaBaseUrl')]"
            }
          ],
          "alwaysOn": true,
          "phpVersion": "",
          "httpsOnly": true
        },
        "name": "[parameters('name')]",
        "serverFarmId": "[parameters('appServicePlanId')]",
        "hostingEnvironment": "[parameters('hostingEnvironment')]"
      },
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      },
      "resources": [
        {
          "name": "staging",
          "type": "slots",
          "apiVersion": "2016-03-01",
          "location": "[resourceGroup().location]",
          "properties": {
            "scmSiteAlsoStopped": true,
            "siteConfig": {
              "appSettings": [
                {
                  "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                  "value": "[reference(resourceId('microsoft.insights/components/', parameters('name')), '2015-05-01').InstrumentationKey]"
                },
                {
                  "name": "EnvironmentName",
                  "value": "[parameters('EnvironmentName')]"
                },
                {
                  "name": "ForecastingRoutePrefix",
                  "value": "forecasting"
                },
                {
                  "name": "LimitForecast",
                  "value": "[parameters('LimitForecast')]"
                },
                {
                  "name": "KeyVaultName",
                  "value": "[parameters('KeyVaultName')]"
                },
                {
                  "name": "LoggingRedisConnectionString",
                  "value": "[parameters('LoggingRedisConnectionString')]"
                },
                {
                  "name": "LoggingRedisKey",
                  "value": "[parameters('LoggingRedisKey')]"
                },
                {
                  "name": "WEBSITE_LOAD_CERTIFICATES",
                  "value": "[reference(resourceId('Microsoft.Web/certificates', parameters('certificateName')), '2016-03-01').Thumbprint]"
                },
                {
                  "name": "BaseAddress",
                  "value": "[parameters('baseAddress')]"
                },
                {
                  "name": "MyaBaseUrl",
                  "value": "[parameters('myaBaseUrl')]"
                }
              ]
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('name'))]"
          ]
        }
      ]
    },
    {
      "apiVersion": "2015-05-01",
      "name": "[parameters('name')]",
      "type": "microsoft.insights/components",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceId('Microsoft.Web/sites', parameters('name')))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('name')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    }
  ],
  "outputs": {
    "webAppIdentity": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Web/sites/', parameters('name')), '2016-03-01', 'Full').identity.principalId]"
    }
  }
}