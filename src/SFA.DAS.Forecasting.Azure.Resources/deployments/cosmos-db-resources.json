{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cosmosDbName": {
            "type": "string"
        },
        "databaseName": {
            "type": "string"
        },
        "collectionName": {
            "type": "string"
        },
        "throughput": {
            "type": "string"
        },
        "cosmosDbIpRangeFilter": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "PartialConnectionString": "[concat('Database=', parameters('databaseName'), ';', 'Collection=', parameters('collectionName'), ';', 'ThroughputOffer=', parameters('throughput'))]"
    },
    "resources": [
        {
            "name": "[parameters('cosmosDbName')]",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "apiVersion": "2015-04-08",
            "location": "[resourceGroup().location]",
            "kind": "GlobalDocumentDB",
            "properties": {
                "consistencyPolicy": {
                    "defaultConsistencyLevel": "Session"
                },
                "databaseAccountOfferType": "Standard",
                "ipRangeFilter": "[parameters('cosmosDbIpRangeFilter')]"
            }
        }
    ],
    "outputs": {
        "CustomConnectionString": {
            "type": "string",
            "value": "[concat('AccountEndpoint=https://', parameters('cosmosDbName'), '.documents.azure.com:443/;AccountKey=', listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbName')), '2015-11-06').primaryMasterKey, ';', variables('PartialConnectionString'))]"
        }
    }
}
