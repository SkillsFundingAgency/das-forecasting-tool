{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "webAppObjectId": {
      "type": "string"
    },
    "secretsPermissionsList": {
      "type": "array"
    },
    "funAppObjectIds": {
      "type": "object"
    },
    "storageConnectionString": {
      "type": "string",
      "metadata": {
        "description": "The connection string for the shared storage account"
      }
    },
    "databaseConnectionString": {
      "type": "string",
      "metadata": {
        "description": "The database connection string"
      }
    },
    "hashString": {
      "type": "string",
      "metadata": {
        "description": "The string used for hashing"
      }
    },
    "allowedHashstringCharacters": {
      "type": "string",
      "metadata": {
        "description": "A list of allowed characters that can be used for hashing"
      }
    },
    "configurationStorageConnectionString": {
      "type": "string",
      "metadata": {
        "description": "The connection string for the configuration storage account"
      }
    },
    "clientId": {
      "type": "string",
      "metadata": {
        "description": "The connection string for the configuration storage account"
      }
    },
    "clientSecret": {
      "type": "securestring",
      "metadata": {
        "description": "The connection string for the configuration storage account"
      }
    },
    "certificateName": {
      "type": "string",
      "metadata": {
        "description": "The connection string for the configuration storage account"
      }
    },
    "certificatePfxBase64": {
      "type": "securestring",
      "metadata": {
        "description": "The PKCS 12 Base64 value of the cert."
      }
    },
    "vstsObjectId": {
      "type": "securestring"
    },
    "MAWObjectId": {
      "type": "securestring"
    },
    "employerConnectionString": {
      "type": "securestring"
    }
  },
  "variables": {
    "copy": [
      {
        "name": "keyVaultAccessPolicies",
        "count": "[length(parameters('funAppObjectIds').objectIds)]",
        "input": {
          "objectId": "[parameters('funAppObjectIds').objectIds[copyIndex('keyVaultAccessPolicies')].identityId.value]",
          "tenantId": "[subscription().tenantId]",
          "permissions": {
            "secrets": "[parameters('secretsPermissionsList')]"
          }
        }
      }
    ],
    "webAppAccessPolicy": [
      {
        "objectId": "[parameters('webAppObjectId')]",
        "tenantId": "[subscription().tenantId]",
        "permissions": {
          "secrets": "[parameters('secretsPermissionsList')]"
        }
      }
    ],
    "Microsoft.Azure.WebSites": [
      {
        "objectId": "[parameters('MAWObjectId')]",
        "tenantId": "[subscription().tenantId]",
        "permissions": {
          "secrets": [ "Get" ]
        }
      }
    ],
    "VSTSServicePrincipal": [
      {
        "objectId": "[parameters('vstsObjectId')]",
        "tenantId": "[subscription().tenantId]",
        "permissions": {
          "certificates": [ "Import" ]
        }
      }
    ]
  },
  "resources": [
    {
      "apiVersion": "2015-06-01",
      "name": "[parameters('name')]",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults",
      "properties": {
        "enabledForDeployment": false,
        "enabledForTemplateDeployment": true,
        "enabledForDiskEncryption": false,
        "accessPolicies": "[concat(variables('keyVaultAccessPolicies'), variables('webAppAccessPolicy'),variables('Microsoft.Azure.WebSites'),variables('VSTSServicePrincipal'))]",
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "name": "standard",
          "family": "A"
        }
      },
      "resources": [
        {
          "type": "secrets",
          "name": "StorageConnectionString",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('storageConnectionString')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "DatabaseConnectionString",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('databaseConnectionString')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "HashString",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('hashString')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "AllowedHashstringCharacters",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('allowedHashstringCharacters')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "configurationStorageConnectionString",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('configurationStorageConnectionString')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "ClientId",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('clientId')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "ClientSecret",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('clientSecret')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "[parameters('certificateName')]",
          "apiVersion": "2015-06-01",
          "properties": {
            "contentType": "application/x-pkcs12",
            "value": "[parameters('certificatePfxBase64')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        },
        {
          "type": "secrets",
          "name": "EmployerConnectionString",
          "apiVersion": "2015-06-01",
          "properties": {
            "value": "[parameters('employerConnectionString')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults/', parameters('name'))]"
          ]
        }
      ]
    }
  ],
  "outputs": {}
}