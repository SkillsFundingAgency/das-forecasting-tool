{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "webAppObjectId": {
      "type": "string"
    },
    "secretsPermissionsList": {
      "type": "array"
    },
    "funAppObjectIds": {
      "type": "object"
    }
  },
  "variables": {
    "copy": [
      {
        "name": "keyVaultAccessPolicies",
        "count": "[length(parameters('funAppObjectIds').objectIds)]",
        "input": {
          "objectId": "[parameters('funAppObjectIds').objectIds[copyIndex('keyVaultAccessPolicies')].identityId.value]",
          "tenantId": "[subscription().tenantId]",
          "permissions": {
            "secrets": "[parameters('secretsPermissionsList')]"
          }
        }
      }
    ],
    "webAppAccessPolicy": [
      {
        "objectId": "[parameters('webAppObjectId')]",
        "tenantId": "[subscription().tenantId]",
        "permissions": {
          "secrets": "[parameters('secretsPermissionsList')]"
        }
      }
    ]
  },
  "resources": [
    {
      "apiVersion": "2015-06-01",
      "name": "[parameters('name')]",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults",
      "properties": {
        "enabledForDeployment": false,
        "enabledForTemplateDeployment": true,
        "enabledForDiskEncryption": false,
        "accessPolicies": "[concat(variables('keyVaultAccessPolicies'), variables('webAppAccessPolicy'))]",
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "name": "Standard",
          "family": "A"
        }
      }
    }
  ],
  "outputs": {}
}