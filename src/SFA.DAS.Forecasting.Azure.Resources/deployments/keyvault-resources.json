{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "webAppObjectId": {
      "type": "string"
    },
    "levyFunAppObjectId": {
      "type": "string"
    },
    "payFunAppObjectId": {
      "type": "string"
    },
    "projFunAppObjectId": {
      "type": "string"
    },
    "secretsPermissionsList": {
      "type": "array"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-01",
      "name": "[parameters('name')]",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults",
      "properties": {
        "enabledForDeployment": false,
        "enabledForTemplateDeployment": true,
        "enabledForDiskEncryption": false,
        "accessPolicies": [
          {
            "objectId": "[parameters('webAppObjectId')]",
            "tenantId": "[subscription().tenantId]",
            "permissions": {
              "secrets": "[parameters('secretsPermissionsList')]"
            }
          },
          {
            "objectId": "[parameters('levyFunAppObjectId')]",
            "tenantId": "[subscription().tenantId]",
            "permissions": {
              "secrets": "[parameters('secretsPermissionsList')]"
            }
          },
          {
            "objectId": "[parameters('payFunAppObjectId')]",
            "tenantId": "[subscription().tenantId]",
            "permissions": {
              "secrets": "[parameters('secretsPermissionsList')]"
            }
          },
          {
            "objectId": "[parameters('projFunAppObjectId')]",
            "tenantId": "[subscription().tenantId]",
            "permissions": {
              "secrets": "[parameters('secretsPermissionsList')]"
            }
          }
        ],
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "name": "Standard",
          "family": "A"
        }
      }
    }
  ]
}
