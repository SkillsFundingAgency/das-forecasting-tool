{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "The base url for templates"
      }
    },
    "appName": {
      "type": "string"
    },
    "environmentName": {
      "type": "string"
    },
    "appHostingEnvironment": {
      "type": "string"
    },
    "appSettingRedisConnection": {
      "type": "string"
    },
    "appSettingLoggingRedisConnectionString": {
      "type": "string"
    },
    "appSettingLoggingRedisKey": {
      "type": "string"
    },
    "appSettingAllowedHashstringCharacters": {
      "type": "string"
    },
    "appSettingHashString": {
      "type": "string"
    },
    "DatabaseConnectionString": {
      "type": "string"
    },
    "appSettingLimitForecast": {
      "type": "bool"
    },
    "ConfigurationStorageConnectionString": {
      "type": "string"
    },
    "appSettingSecondsToWaitToAllowProjections": {
      "type": "string"
    },
    "storageName": {
      "type": "string"
    },
    "kvName": {
      "type": "string"
    },
    "kvSecretsPermissionsList": {
      "type": "array"
    },
    "levFunAppName": {
      "type": "string"
    },
    "payFunAppName": {
      "type": "string"
    },
    "prjFunAppName": {
      "type": "string"
    },
    "sharedHostingPlanName": {
      "type": "string"
    },
    "funAppHostingEnvironment": {
      "type": "string"
    },
    "sharedServerFarmResourceGroup": {
      "type": "string"
    }
  },
  "variables": {
    "storageResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/storage-resources.json')]",
    "webappResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/web-app-resources.json')]",
    "functionappResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/function-app-resources.json')]",
    "keyvaultResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/keyvault-resources.json')]"
  },
  "resources": [
    {
      "apiVersion": "2017-08-01",
      "name": "storage-resources-deployment",
      "dependsOn": [],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('storageResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('storageName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "web-app-resources-deployment",
      "dependsOn": [],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('webappResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('appName')]"
          },
          "hostingPlanName": {
            "value": "[parameters('sharedHostingPlanName')]"
          },
          "hostingEnvironment": {
            "value": "[parameters('appHostingEnvironment')]"
          },
          "serverFarmResourceGroup": {
            "value": "[parameters('sharedServerFarmResourceGroup')]"
          },
          "EnvironmentName": {
            "value": "[parameters('environmentName')]"
          },
          "RedisConnection": {
            "value": "[parameters('appSettingRedisConnection')]"
          },
          "LoggingRedisConnectionString": {
            "value": "[parameters('appSettingLoggingRedisConnectionString')]"
          },
          "LoggingRedisKey": {
            "value": "[parameters('appSettingLoggingRedisKey')]"
          },
          "AllowedHashstringCharacters": {
            "value": "[parameters('appSettingAllowedHashstringCharacters')]"
          },
          "HashString": {
            "value": "[parameters('appSettingHashString')]"
          },
          "DatabaseConnectionString": {
            "value": "[parameters('DatabaseConnectionString')]"
          },
          "LimitForecast": {
            "value": "[parameters('appSettingLimitForecast')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "function-app-resources-deployment",
      "dependsOn": [
        "storage-resources-deployment"
      ],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('functionappResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "levFunAppName": {
            "value": "[parameters('levFunAppName')]"
          },
          "payFunAppName": {
            "value": "[parameters('payFunAppName')]"
          },
          "prjFunAppName": {
            "value": "[parameters('prjFunAppName')]"
          },
          "storageName": {
            "value": "[parameters('storageName')]"
          },
          "hostingPlanName": {
            "value": "[parameters('sharedHostingPlanName')]"
          },
          "hostingEnvironment": {
            "value": "[parameters('funAppHostingEnvironment')]"
          },
          "serverFarmResourceGroup": {
            "value": "[parameters('sharedServerFarmResourceGroup')]"
          },
          "ConfigurationStorageConnectionString": {
            "value": "[parameters('ConfigurationStorageConnectionString')]"
          },
          "EnvironmentName": {
            "value": "[parameters('environmentName')]"
          },
          "DatabaseConnectionString": {
            "value": "[parameters('DatabaseConnectionString')]"
          },
          "LoggingRedisConnectionString": {
            "value": "[parameters('appSettingLoggingRedisConnectionString')]"
          },
          "LoggingRedisKey": {
            "value": "[parameters('appSettingLoggingRedisKey')]"
          },
          "HashString": {
            "value": "[parameters('appSettingHashString')]"
          },
          "AllowedHashstringCharacters": {
            "value": "[parameters('appSettingAllowedHashstringCharacters')]"
          },
          "SecondsToWaitToAllowProjections": {
            "value": "[parameters('appSettingSecondsToWaitToAllowProjections')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "keyvault-resources-deployment",
      "dependsOn": [],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('keyvaultResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('kvName')]"
          },
          "webAppObjectId": {
            "value": "[reference('web-app-resources-deployment').outputs.webAppIdentity.value]"
          },
          "levFunAppObjectId": {
            "value": "[reference('function-app-resources-deployment').outputs.levFunAppIdentity.value]"
          },
          "payFunAppObjectId": {
            "value": "[reference('function-app-resources-deployment').outputs.payFunAppIdentity.value]"
          },
          "prjFunAppObjectId": {
            "value": "[reference('function-app-resources-deployment').outputs.prjFunAppIdentity.value]"
          },
          "secretsPermissionsList": {
            "value": "[parameters('kvSecretsPermissionsList')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
