{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "The base url for templates"
      }
    },
    "appName": {
      "type": "string"
    },
    "environmentName": {
      "type": "string"
    },
    "appHostingEnvironment": {
      "type": "string"
    },
    "appSettingNumberOfMonthsToProject": {
      "type": "string"
    },
    "appSettingLimitForecast": {
      "type": "bool"
    },
    "appSettingLoggingRedisConnectionString": {
      "type": "string"
    },
    "appSettingLoggingRedisKey": {
      "type": "string"
    },
    "configurationStorageConnectionString": {
      "type": "string"
    },
    "appSettingSecondsToWaitToAllowProjections": {
      "type": "string"
    },
    "storageName": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "kvSecretsPermissionsList": {
      "type": "array"
    },
    "funAppNames": {
      "type": "array"
    },
    "sharedHostingPlanName": {
      "type": "string"
    },
    "funAppHostingEnvironment": {
      "type": "string"
    },
    "sharedServerFarmResourceGroup": {
      "type": "string"
    },
    "secretDatabaseConnectionString": {
      "type": "string"
    },
    "secretHashString": {
      "type": "string"
    },
    "secretAllowedHashstringCharacters": {
      "type": "string"
    },
    "clientId": {
      "type": "string"
    },
    "clientSecret": {
      "type": "string"
    },
    "certificateName": {
      "type": "string"
    },
    "MAWObjectId": {
      "type": "securestring"
    },
    "employerConnectionString": {
      "type": "securestring"
    },
    "baseAddress": {
      "type": "string"
    },
    "keyvaultCertificateName": {
      "type": "string"
    },
    "customHostname": {
      "type": "string"
    },
    "certResourceGroup": {
      "type": "string"
    },
    "myaBaseUrl": {
      "type": "string"
    },
    "cosmosDbName": {
      "type": "string"
    },
    "cosmosDbDatabaseName": {
      "type": "string"
    },
    "cosmosDbCollectionName": {
      "type": "string"
    },
    "cosmosDbThroughput": {
      "type": "string"
    }
  },
  "variables": {
    "storageResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/storage-resources.json')]",
    "webappResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/web-app-resources.json')]",
    "functionappResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/function-app-resources.json')]",
    "keyvaultResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/keyvault-resources.json')]",
    "cosmosDbResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/cosmos-db-resources.json')]"
  },
  "resources": [
    {
      "apiVersion": "2017-08-01",
      "name": "storage-resources-deployment",
      "dependsOn": [],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('storageResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('storageName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "web-app-resources-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('webappResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('appName')]"
          },
          "hostingPlanName": {
            "value": "[parameters('sharedHostingPlanName')]"
          },
          "hostingEnvironment": {
            "value": "[parameters('appHostingEnvironment')]"
          },
          "serverFarmResourceGroup": {
            "value": "[parameters('sharedServerFarmResourceGroup')]"
          },
          "EnvironmentName": {
            "value": "[parameters('environmentName')]"
          },
          "LimitForecast": {
            "value": "[parameters('appSettingLimitForecast')]"
          },
          "KeyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "LoggingRedisConnectionString": {
            "value": "[parameters('appSettingLoggingRedisConnectionString')]"
          },
          "LoggingRedisKey": {
            "value": "[parameters('appSettingLoggingRedisKey')]"
          },
          "certificateName": {
            "value": "[parameters('certificateName')]"
          },
          "BaseAddress": {
            "value": "[parameters('baseAddress')]"
          },
          "keyvaultCertificateName": {
            "value": "[parameters('keyvaultCertificateName')]"
          },
          "customHostname": {
            "value": "[parameters('customHostname')]"
          },
          "certResourceGroup": {
            "value": "[parameters('certResourceGroup')]"
          },
          "myaBaseUrl": {
            "value": "[parameters('myaBaseUrl')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "[concat(parameters('funAppNames')[copyIndex()], '-function-app-resources-deployment')]",
      "dependsOn": [
        "storage-resources-deployment"
      ],
      "copy": {
        "name": "function-app-copy",
        "count": "[length(parameters('funAppNames'))]"
      },
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('functionappResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "funAppName": {
            "value": "[parameters('funAppNames')[copyIndex()]]"
          },
          "hostingPlanName": {
            "value": "[parameters('sharedHostingPlanName')]"
          },
          "hostingEnvironment": {
            "value": "[parameters('funAppHostingEnvironment')]"
          },
          "serverFarmResourceGroup": {
            "value": "[parameters('sharedServerFarmResourceGroup')]"
          },
          "EnvironmentName": {
            "value": "[parameters('environmentName')]"
          },
          "SecondsToWaitToAllowProjections": {
            "value": "[parameters('appSettingSecondsToWaitToAllowProjections')]"
          },
          "KeyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "NumberOfMonthsToProject": {
            "value": "[parameters('appSettingNumberOfMonthsToProject')]"
          },
          "LoggingRedisConnectionString": {
            "value": "[parameters('appSettingLoggingRedisConnectionString')]"
          },
          "LoggingRedisKey": {
            "value": "[parameters('appSettingLoggingRedisKey')]"
          },
          "storageConnectionString": {
            "value": "[reference('storage-resources-deployment').outputs.StorageConnectionString.value]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "keyvault-resources-deployment",
      "dependsOn": [
        "function-app-copy",
        "storage-resources-deployment",
        "web-app-resources-deployment",
        "cosmos-db-resources-deployment"
      ],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('keyvaultResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[parameters('keyVaultName')]"
          },
          "webAppObjectId": {
            "value": "[reference('web-app-resources-deployment').outputs.webAppIdentity.value]"
          },
          "secretsPermissionsList": {
            "value": "[parameters('kvSecretsPermissionsList')]"
          },
          "funAppObjectIds": {
            "value": {
              "copy": [
                {
                  "name": "objectIds",
                  "count": "[length(parameters('funAppNames'))]",
                  "input": {
                    "identityId": "[reference(concat(parameters('funAppNames')[copyIndex('objectIds')], '-function-app-resources-deployment')).outputs.funAppIdentity]"
                  }
                }
              ]
            }
          },
          "storageConnectionString": {
            "value": "[reference('storage-resources-deployment').outputs.StorageConnectionString.value]"
          },
          "DatabaseConnectionString": {
            "value": "[parameters('secretDatabaseConnectionString')]"
          },
          "HashString": {
            "value": "[parameters('secretHashString')]"
          },
          "AllowedHashstringCharacters": {
            "value": "[parameters('secretAllowedHashstringCharacters')]"
          },
          "configurationStorageConnectionString": {
            "value": "[parameters('configurationStorageConnectionString')]"
          },
          "clientId": {
            "value": "[parameters('clientId')]"
          },
          "clientSecret": {
            "value": "[parameters('clientSecret')]"
          },
          "MAWObjectId": {
            "value": "[parameters('MAWObjectId')]"
          },
          "employerConnectionString": {
            "value": "[parameters('employerConnectionString')]"
          },
          "cosmosDbConnectionString": {
            "value": "[reference('cosmos-db-resources-deployment').outputs.CustomConnectionString]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "cosmos-db-resources-deployment",
      "dependsOn": [],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('cosmosDbResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "cosmosDbName": {
            "value": "[parameters('cosmosDbName')]"
          },
          "databaseName": {
            "value": "[parameters('cosmosDbDatabaseName')]"
          },
          "collectionName": {
            "value": "[parameters('cosmosDbCollectionName')]"
          },
          "throughput": {
            "value": "[parameters('cosmosDbThroughput')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
